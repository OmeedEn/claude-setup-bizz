{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "./knowledge-base"],
      "description": "Listings, neighborhood guides, market reports"
    },
    "google-calendar": {
      "command": "npx",
      "args": ["-y", "mcp-server-google-calendar"],
      "env": {
        "GOOGLE_CLIENT_ID": "${GOOGLE_CLIENT_ID}",
        "GOOGLE_CLIENT_SECRET": "${GOOGLE_CLIENT_SECRET}",
        "GOOGLE_REFRESH_TOKEN": "${GOOGLE_REFRESH_TOKEN}"
      },
      "description": "Schedule showings and appointments"
    },
    "hubspot": {
      "command": "npx",
      "args": ["-y", "mcp-server-hubspot"],
      "env": {
        "HUBSPOT_ACCESS_TOKEN": "${HUBSPOT_ACCESS_TOKEN}"
      },
      "description": "CRM - leads, contacts, deals"
    }
  }
}
